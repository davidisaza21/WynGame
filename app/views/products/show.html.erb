<<<<<<< HEAD
  <h1 class="page_sub_heading"><%= @product.name %></h1>
  <div class="entire_page">
  <div class="game_info">
  <p class="GameImage">
    <strong>Game Cover</strong><br>
    <figure class="game_pic_show"><%= image_tag(@product.picture, :size => '560x315')%></figure>
  </p>
  <p>
    <strong>Name:</strong>
    <%= @product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @product.formatted_price %>
  </p>

  <p>
    <strong>Buy:</strong>
    <%= link_to 'Buy', @product.gumroad_link %>
  </p>

  <p>
    <strong>Video:</strong><br>
    <%= @product.video_link.html_safe %>
  </p>
  <h3>Reviews</h3>
  <% @product.reviews.each do |review| %>
      <p>
        <%= review.comment %>
        <br>
        Added on: <%= time_ago_in_words(review.created_at) %>
        Added by: <%= review.user.name %>
      </p>
  <% end %>

  <h3>New Review</h3>
  <%= render 'reviews/form' %>

  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>
  </div>


